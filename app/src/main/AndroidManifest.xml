<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donate4life">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DetailsActivity"
            android:theme="@style/generalnotitle"></activity>
        <activity
            android:name=".TextRecognition"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".LeftFoodActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".BooksActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".EquipmentsActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".MoneyActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".BloodForm"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".DonateActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".AcceptActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/generalnotitle" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/generalnotitle" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>